table, td{
	border: solid 1px black;
	border-spacing: 0px;
}

th, td{
	padding: 3.5px;
}

svg.octicons{
	height: 1em;
	width: auto;
	top: 0.125em;
	position: relative;
}

body{
	margin: 0px;
	border: none;
}

body > *{
	margin: auto;
	padding: 10px;
}

body > main {
	margin-top: 5px;
	margin-bottom: 5px;
	width: calc(40% + 250px);
	min-width: 60%
	max-width: 100%;
}

body > header, footer {
	margin-top: 0px;
	margin-bottom: 0px;
	width: auto;
}

body > header {
	padding-bottom: 5px;
}

body > footer {
	padding-top: 5px;
}
